@model dotnet_portfolio.Models.Comment;
@{
    System.Console.WriteLine($"MOdel: {Model.Name}");
    var locationList = new List<string>(){
        "Berkeley, CA",
        "Boise, ID",
        "Chicago, IL",
        "Dallas, TX",
        "Los Angeles, CA",
        "Orange County, CA",
        "Seattle, WA",
        "Silicon Valley, CA",
        "Tulsa, OK",
        "Tysons Corner, VA",
        "Online"
    };
    var languageList = new List<string>(){
        "C",
        "C++",
        "C#",
        "Objective C",
        "Java",
        "Basic",
        "JavaScript",
        "Python",
        "Scala",
        "Go",
        "Swift",
        "Ruby"
    };
    var locationIndex = Model.Location;
    var thisLocation = locationList[Convert.ToInt32(locationIndex)];
