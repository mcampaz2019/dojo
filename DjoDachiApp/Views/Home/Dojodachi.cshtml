@{
    ViewData["Title"] = "Dojo Dachi";
}

<div class="card text-white bg-info mb-3 col-12" >
    <div class="card-header">
        <ul class="list-group list-group-horizontal-md">    
            <li class="list-group-item list-group-item-primary col-3">Fullness<span class="badge badge-light ml-5">40</span></li>  
            <li class="list-group-item list-group-item-success col-3">Happiness<span class="badge badge-light ml-5">54</span></li>
            <li class="list-group-item list-group-item-danger col-3">Meals<span class="badge badge-light ml-5">45</span></li>
            <li class="list-group-item list-group-item-warning col-3">Energy<span class="badge badge-light ml-5">14</span></li>
        </ul>
    </div>
    <img src="../images/640x360.png" class="img-fluid align-self-center mt-2 pt-3 rounded max-width:80%" alt="...">
    <div class="card-body align-center">
        <button class="card-title btn btn-primary btn-lg btn-block disabled ">Your move!</button>
    </div>
    <div class="card-footer row">
        <button type="button" class="btn btn-primary col-3 ml-3 mr-3">Feed</button>
        <button type="button" class="btn btn-warning col-3 mr-3">Play</button>
        <button type="button" class="btn btn-success col-3 mr-3">Work</button>
        <button type="button" class="btn btn-danger col-2">Sleep</button>
    </div>
</div>
