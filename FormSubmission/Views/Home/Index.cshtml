@{
    ViewData["Title"] = "Home Page";
}

<div class="text-left col-8">
    <div class="card border-primary mb-10 px-2 rounded">
        <div class="card-body">
            <h2 class="display-4 card-title text-primary">Enter your information</h2>
            @model User
            <form asp-action="Register" asp-controller="Home" method="Post">
                
                <div class="form-group col-8 row">                    
                    <label asp-for="FirstName" class=" px-2"></label>
                    <input asp-for="FirstName">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                
                <div class="form-group col-8 row">                    
                    <label asp-for="LastName" class=" px-2"></label>
                    <input asp-for="LastName">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                
                <div class="form-group col-8 row">
                    <label asp-for="Age" class=" px-2"></label>
                    <input asp-for="Age">                
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                
                <div class="form-group col-8 row">
                    <label asp-for="Birthday" class=" px-2"></label>
                    <input asp-for="Birthday">                
                    <span asp-validation-for="Birthday" class="text-danger"></span>
                </div>
                
                <div class="form-group col-8 row">
                    <label asp-for="Email" class=" px-2"></label>
                    <input asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="form-group col-8 row">
                    <label asp-for="Password" class=" px-2"></label>
                    <input asp-for="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
