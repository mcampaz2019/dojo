<div class="card border-primary mb-10 px-2 rounded">
    <div class="card-body">
        <h2 class="display-4 card-title text-primary  text-center">Register</h2>
        @model User
        <form asp-action="Register" asp-controller="Home" method="Post">
            <div class="row">
                <div class="form-group col-6">                    
                    <label asp-for="FirstName" class="col-6 text-small"></label>
                    <input asp-for="FirstName" class="col-6">
                    <span asp-validation-for="FirstName" class="badge badge-pill badge-danger"></span>
                </div>
                
                 <div class="form-group col-6">
                    <label asp-for="Password" class="col-6 text-small"></label>
                    <input asp-for="Password" class="col-6">
                    <span asp-validation-for="Password" class="badge badge-pill badge-danger"></span>
                </div>
            </div>
            
            <div class="row">
                <div class="form-group col-6">                    
                    <label asp-for="LastName" class="px-2 col-6"></label>
                    <input asp-for="LastName" class="px-2 col-6">
                    <span asp-validation-for="LastName" class="badge badge-pill badge-danger"></span>
                </div> 
                
                <div class="form-group col-6">
                    <label asp-for="ConfirmPassword" class="px-2 col-6"></label>
                    <input asp-for="ConfirmPassword" class="px-2 col-6">
                    <span asp-validation-for="ConfirmPassword" class="badge badge-pill badge-danger"></span>
                </div>                
            </div>
            
            <div class="row">
                <div class="form-group">
                    <label asp-for="Email" class=" px-2"></label>
                    <input asp-for="Email">
                    <span asp-validation-for="Email" class="badge badge-pill badge-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-2">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>
