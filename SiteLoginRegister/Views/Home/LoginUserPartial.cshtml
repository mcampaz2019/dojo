<div class="card border-primary mb-10 px-2 rounded">
    <div class="card-body">
        <h2 class="display-4 card-title text-primary text-center">Login</h2>
        @model LoginUser
        <form asp-action="Login" asp-controller="Home" method="Post">
                                                            
            <div class="form-group col-8 row">
                <label asp-for="LoginEmail" class=" px-2"></label>
                <input asp-for="LoginEmail">
                <span asp-validation-for="LoginEmail" class="badge badge-pill badge-danger"></span>
            </div>
            
            <div class="form-group col-8 row">
                <label asp-for="LoginPassword" class=" px-2"></label>
                <input asp-for="LoginPassword">
                <span asp-validation-for="LoginPassword" class="badge badge-pill badge-danger"></span>
            </div>
            
            <div class="form-group row">
                <div class="col-sm-2">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </div>
        </form>
    </div>
</div>
